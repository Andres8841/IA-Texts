---
import Layout from "../layouts/Layout.astro";
import BotonEnviar from "../components/BotonEnviar.svelte";
import TextArea from "../components/TextArea.svelte";
import RichText from "../components/RichText.svelte";
---

<Layout title="Arregla mi Inglés">
	<div class="relative h-screen overflow-hidden bg-indigo-900">
		<img
			src="https://www.tailwind-kit.com/images/landscape/6.svg"
			class="absolute object-cover w-full h-full"
		/>

		<div class="absolute inset-0 bg-black opacity-25"></div>

		<header class="absolute top-0 left-0 right-0 z-20">
			<nav class="container px-6 py-4 mx-auto md:px-12">
				<div class="items-center justify-center md:flex">
					<div class="flex items-center justify-between">
						<div class="md:hidden">
							<button class="text-white focus:outline-none">
								<svg
									class="w-12 h-12"
									viewBox="0 0 24 24"
									fill="none"
									xmlns="http://www.w3.org/2000/svg"
								>
									<path
										d="M4 6H20M4 12H20M4 18H20"
										stroke="currentColor"
										stroke-width="2"
										stroke-linecap="round"
										stroke-linejoin="round"
									>
									</path>
								</svg>
							</button>
						</div>
					</div>
					<div class="items-center hidden md:flex">
						<a
							class="mx-3 text-lg text-white uppercase cursor-pointer hover:text-gray-300"
						>
							Grupo #2
						</a>
						<a
							class="mx-3 text-2xl text-white uppercase cursor-pointer hover:text-gray-300"
						>
							Universidad Fidélitas
						</a>
						<a
							class="mx-3 text-lg text-white uppercase cursor-pointer hover:text-gray-300"
						>
							Paradigmas
						</a>
					</div>
				</div>
			</nav>
		</header>

		<main
			class="container relative z-10 flex items-center px-6 py-32 mx-auto md:px-12 xl:py-40 h-auto"
		>

			<div class="relative z-10 flex flex-col items-center w-full gap-5 justify-between">
				<h1
					class="font-extrabold text-center text-white text-7xl sm:text-8xl py-10"
				>
					¡Arregla mi Inglés!
				</h1>

				<section class="flex flex-row gap-5 w-full flex-wrap-reverse justify-center h-full">

					<div class="flex gap-4 flex-col w-3/5">
						<RichText client:visible></RichText>
					</div>

					<aside class="flex gap-4 flex-col w-1/5">
						<TextArea client:visible />
						<BotonEnviar client:visible />
					</aside>

				</section>


			</div>

		</main>
	</div>
</Layout>
